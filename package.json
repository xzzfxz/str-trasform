{
  "name": "str-transform",
  "publisher": "xzzfxz",
  "displayName": "str-transform",
  "description": "transform upper or lower or number or string 将选中的字符转换成大写，小写，数字，字符串",
  "keywords": [
    "转换",
    "大小写",
    "数字转字符串",
    "字符串转数字"
  ],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "str-transform"
    },
    "commands": [
      {
        "command": "str-transform.toUpper",
        "title": "lower to upper"
      },
      {
        "command": "str-transform.toLower",
        "title": "upper to lower"
      },
      {
        "command": "str-transform.toNumber",
        "title": "string to number"
      },
      {
        "command": "str-transform.toString",
        "title": "number to string"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "str-transform.toUpper",
          "when": "editorHasSelection",
          "group": "transform@1"
        },
        {
          "command": "str-transform.toLower",
          "when": "editorHasSelection",
          "group": "transform@1"
        },
        {
          "command": "str-transform.toNumber",
          "when": "editorHasSelection",
          "group": "transform@1"
        },
        {
          "command": "str-transform.toString",
          "when": "editorHasSelection",
          "group": "transform@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}
